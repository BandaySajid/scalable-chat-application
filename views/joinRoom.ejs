<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realtime-ChatApp | <%= pageTitle %>
    </title>
    <%- include('partials/bootstrap.ejs') %>
</head>

<body>

    <div id="alert-container">

    </div>

    <div class="container my-4">
        <form class="form-container" onsubmit="joinRoom(event)">
            <div class="mb-3">
                <label for="room-id" class="form-label">Room ID</label>
                <input type="text" class="form-control" id="room-id" placeholder="Enter room id">
            </div>
            <hr>
            <div class="container text-center">
                <button class="btn btn-success">Join</button>
                <hr>
                <hp>Create a new room ?<span><a href="/createRoom" style="text-decoration: none;"> Create</a></span>
                </hp>
            </div>
        </form>
    </div>
    <script src="js/joinRoom.js"></script>
    <script src="js/alert.js"></script>
</body>

</html>